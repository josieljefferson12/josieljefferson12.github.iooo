name: Deploy Jekyll to GitHub Pages

on:
  push:
    branches: ["main"]
  workflow_dispatch:

permissions:
  contents: write
  pages: write
  id-token: write

concurrency:
  group: "pages-deploy-${{ github.ref }}"
  cancel-in-progress: false

jobs:
  setup:
    runs-on: ubuntu-latest
    timeout-minutes: 15
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Handle package-lock.json
        run: |
          if [ ! -f package-lock.json ]; then
            if [ -f package.json ]; then
              npm install --package-lock-only --no-audit --no-fund
            else
              npm init -y
              echo "{}" > package-lock.json
            fi
          else
            npm ci --no-audit --no-fund
          fi

      - name: Generate metadata
        run: npm start
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}

      - name: Commit updated files
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          
          # Verifica por mudan√ßas em ambos os arquivos
          git add package-lock.json files_metadata.json
          
          if git diff --cached --quiet; then
            echo "No changes to commit"
          else
            git commit -m "Auto-update package-lock.json and metadata [skip ci]"
            git pull --rebase
            git push
          fi

  build:
    needs: setup
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Verify metadata and lock file
        run: |
          if [ ! -f files_metadata.json ]; then
            echo "files_metadata.json not found!"
            exit 1
          fi
          if [ ! -f package-lock.json ]; then
            echo "package-lock.json not found!"
            exit 1
          fi

      - name: Setup Ruby
        uses: ruby/setup-ruby@v1
        with:
          ruby-version: '3.1'
          bundler-cache: true

      - name: Build with Jekyll
        run: |
          bundle install
          bundle exec jekyll build

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: ./_site

  deploy:
    needs: build
    environment:
      name: github-pages
      url: ${{ steps.deployment.outputs.page_url }}
    runs-on: ubuntu-latest
    steps:
      - name: Deploy to GitHub Pages
        id: deployment
        uses: actions/deploy-pages@v4
